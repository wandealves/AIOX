# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=aiox
DB_PASSWORD=aiox_secret
DB_NAME=aiox
DB_SSLMODE=disable
DB_MAX_CONNS=25

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=change-me-access-secret-at-least-32-chars!!
JWT_REFRESH_SECRET=change-me-refresh-secret-at-least-32-chars!!
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Encryption (AES-256 key, 32 bytes hex-encoded = 64 hex chars)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# XMPP (used for JID generation)
XMPP_DOMAIN=aiox.local

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text
